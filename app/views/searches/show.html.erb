<h1>Search Results</h1>
<% if @search.search_houses.empty? %>
  <p> No records found</p>
<% else %>
  <% @search.search_houses.each do |c| %>
    <div class="div">
      <h1><%= c.name %></h1>
      <% if session[:role] != 'Realtor' %>
      <%= link_to 'Add to Favourites', "/favourites/add/#{current_user.id}/#{c.id}" %>
        <% end %>
      <p>Location: <%= c.location %></p>
      <p>Company: <%= c.company.name %></p>
      <p> Area: <%= c.area %></p>
      <p>Year: <%= c.year %></p>
      <p>Style: <%= c.style %></p>
      <p>Price: $<%= c.price %></p>
      <p>Floors: <%= c.floors %></p>
      <p>Basement: <%= c.basement %></p>
      <p>Owner: <%= c.owner %></p>
      <p>Realtor's contact: <%= c.realtor.phone %></p>
    </div>
  <% end %>
<% end %>
<a href="javascript:history.back()">Back</a>